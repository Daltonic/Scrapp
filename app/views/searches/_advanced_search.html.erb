<div class="container" style="margin-top: 1%; width: 50%;">
  <h3 class="lead text-capitalize text-primary">Advanced Search Form</h3>
  <%= form_for @search, html: { class: "form-group"} do |f| %>
      <div class="form-group">
        <%= f.label :keyword, class: "lead" %>
        <%= f.text_field :keyword, class: "form-control", placeholder: "Seach by keyword e.g 4gb, 2.3ghz, 2tb, 15.6 inch, dell, hp, etc" %>
      </div>

      <div class="form-group">
        <%= f.label :max_price, class: "lead" %>
        <%= f.text_field :max_price, class: "form-control", placeholder: "Enter the Max price" %>
      </div>

     <div class="form-group">
       <%= f.label :min_price, class: "lead" %>
       <%= f.text_field :min_price, class: "form-control", placeholder: "Enter the Min price" %>
     </div>

      <div class="form-group">
        <%= f.label :brand, class: "lead" %>
        <%= f.text_field :brand, class: "form-control", placeholder: "Enter the brand name" %>
      </div>

      <div class="form-group">
        <%= f.submit 'Search', class: "btn btn-success" %>
      </div>
  <% end %>

</div>