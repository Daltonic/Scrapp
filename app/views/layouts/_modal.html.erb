<%= form_for @search, method: :post do |f| %>
    <div class="modal fade" id="myFilterModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title text-uppercase" id="myModalLabel">Advance Search</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <%= f.label :keyword, class: "lead" %>
              <%= f.text_field :keyword, class: "form-control", placeholder: "Seach by keyword" %>
            </div>

            <div class="form-group">
              <%= f.label :max_price, class: "lead" %>
              <%= f.text_field :max_price, class: "form-control", placeholder: "Enter the Max price" %>
            </div>

            <div class="form-group">
              <%= f.label :min_price, class: "lead" %>
              <%= f.text_field :min_price, class: "form-control", placeholder: "Enter the Min price" %>
            </div>

            <div class="form-group">
              <%= f.label :brand, class: "lead" %>
              <%= f.text_field :brand, class: "form-control", placeholder: "Enter the brand name" %>
            </div>
          </div>
          <div class="modal-footer">
            <%= f.submit 'Search', "type":"button", "class":"btn btn-success", "data-dismiss":"modal" %>
          </div>
          <%# redirect_to search_path(@search) %>
        </div>
      </div>
    </div>
<% end %>